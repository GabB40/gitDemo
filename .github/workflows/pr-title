name: "PR Title"

on:
  pull_request:
    types: [opened, reopened, edited]

jobs:
  auto_pr_title:
    name: Auto PR Title
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
      - name: Run Auto PR Title
        uses: ./
        with: 
          gh-token: ${{ secrets.GITHUB_TOKEN }}
          base-branches: |
            master
            main
            develop
